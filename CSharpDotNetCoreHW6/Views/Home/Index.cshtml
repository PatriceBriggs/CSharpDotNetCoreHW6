@model CSharpDotNetCoreHW6.Models.BirthdayCardModel
@{
    ViewData["Title"] = "Birthday Cards";
    Layout = "_Layout";
}


<div>
    <h1 style="margin-top:3.7rem;">Send a Birthday Card</h1>
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Index">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label" asp-for="From">From: </label>
                    <input asp-for="From" class="form-control textFieldAlignment" placeholder="Enter who the card is from.">
                </div>

                <div class="form-group">
                    <label class="control-label" asp-for="To">To: </label>
                    <input asp-for="To" class="form-control textFieldAlignment" placeholder="Enter who the card is to.">
                </div>

                <div class="form-group">
                    <label class="control-label" asp-for="Message">Message: </label>
                    <input asp-for="Message" class="form-control textFieldAlignment messageBackground"  placeholder="Enter the birthday message.">
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-success">Send Card</button>
                </div>
            </form>
        </div>
    </div>
</div>